@model IEnumerable<IntegradorP.Models.Reserva>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instalacion.NombreIns)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.NombreUsu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraInicio)
            </td>
            <td>
                @if (item.Instalacion != null)
                {
                    @Html.DisplayFor(modelItem => item.Instalacion.NombreIns)
                }
            </td>
            <td>
                @if (item.Usuario != null)
                {
                    @Html.DisplayFor(modelItem => item.Usuario.NombreUsu)
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReservaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReservaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReservaId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>