@model Usuario

@{
    ViewBag.Title = "Registrarse";
}

<style>
    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .btn-primary {
        padding: 10px 20px;
        background-color: #007bff;
        border: none;
        color: white;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>

<form method="post">
    <div class="container register">
        <div class="row">
            <div class="col-md-3 register-left"></div>
            <div class="col-md-9 register-right">
                <div class="tab-content">
                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(ViewData["error"] as string))
                        {
                            <div class="alert alert-danger">
                                @ViewData["error"]
                            </div>
                        }

                        <div class="form-group">
                            <label asp-for="NombreUsu"></label>
                            <input asp-for="NombreUsu" class="form-control" placeholder="Nombre" type="text" />
                            <span asp-validation-for="NombreUsu" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmailUsu"></label>
                            <input asp-for="EmailUsu" class="form-control" placeholder="Email" type="text" />
                            <span asp-validation-for="EmailUsu" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CedulaUsu"></label>
                            <input asp-for="CedulaUsu" class="form-control" placeholder="Cedula" type="text" />
                            <span asp-validation-for="CedulaUsu" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Registrarse" class="btn btn-primary" asp-action="Registrar" asp-controller="Accounts" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>